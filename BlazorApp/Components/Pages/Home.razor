@page "/"

<PageTitle>Home - Music Class Registration</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Music Class Registration</h1>
        <p class="lead">Book one-on-one music lessons with professional instructors</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Browse Classes</h3>
                    <p class="card-text">Explore available music classes for various instruments and skill levels.</p>
                    <a href="/browse-classes" class="btn btn-primary">View Classes</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Meet Our Instructors</h3>
                    <p class="card-text">Learn from experienced and passionate music instructors.</p>
                    <a href="/instructors" class="btn btn-primary">View Instructors</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Easy Booking</h3>
                    <p class="card-text">Simple registration process - no account required!</p>
                    <a href="/browse-classes" class="btn btn-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h2 class="text-center mb-4">How It Works</h2>
        <div class="row">
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <span class="badge bg-primary rounded-circle p-3 fs-4">1</span>
                </div>
                <h5>Browse Classes</h5>
                <p>Find the perfect class for your instrument and skill level</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <span class="badge bg-primary rounded-circle p-3 fs-4">2</span>
                </div>
                <h5>Select Time Slot</h5>
                <p>Choose a convenient date and time from available slots</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <span class="badge bg-primary rounded-circle p-3 fs-4">3</span>
                </div>
                <h5>Provide Details</h5>
                <p>Enter your name, email, and phone number</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="mb-3">
                    <span class="badge bg-primary rounded-circle p-3 fs-4">4</span>
                </div>
                <h5>Confirmed!</h5>
                <p>Your class is booked and ready to go</p>
            </div>
        </div>
    </div>
</div>
