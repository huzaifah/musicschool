@rendermode InteractiveServer
@using BlazorApp.Models
@using BlazorApp.Services.Interfaces
@inject IViewModeService ViewModeService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Music Class Registration</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @if (ViewModeService.CurrentMode == ViewMode.Public)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="browse-classes">
                    <span class="bi bi-music-note-list-nav-menu" aria-hidden="true"></span> Browse Classes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="instructors">
                    <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Instructors
                </NavLink>
            </div>
        }
        else if (ViewModeService.CurrentMode == ViewMode.Instructor)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="instructor/schedule">
                    <span class="bi bi-calendar-nav-menu" aria-hidden="true"></span> My Schedule
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="instructor/bookings">
                    <span class="bi bi-list-check-nav-menu" aria-hidden="true"></span> My Bookings
                </NavLink>
            </div>
        }
        else if (ViewModeService.CurrentMode == ViewMode.Admin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/dashboard">
                    <span class="bi bi-speedometer2-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/instructors">
                    <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Manage Instructors
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/classes">
                    <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Manage Classes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/bookings">
                    <span class="bi bi-journal-check-nav-menu" aria-hidden="true"></span> All Bookings
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        ViewModeService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        ViewModeService.OnChange -= StateHasChanged;
    }
}
